<div class="col-sm-12 relative">
  <%= render "layouts/sidebar" %>
  <div class="main-content">
    <%= render "layouts/jumbotron" %>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h2>SONGS(<%= @songs.count %>)</h2>
        <div class="tag-list">
          <h4>Tags</h4>
          <ul style="list-style-type: none;">
            <% @tags.each do |tag| %>
              <li><%= link_to tag.name, tagged_songs_path(tag.name) %></li>
            <% end %>
          </ul>
        </div>
        <table class="table table-hover">
          <thead class="row">
            <th class="col-sm-6">NAME</th>
            <th class="col-sm-3">FAVORITES</th>
            <th class="col-sm-3"></th>
          </thead>
          <tbody>
            <% @songs.each do |song| %>
              <tr>
                <td><%= song.name %></td>
                <td><%= render "public/favorites/favorite", song: song %></td>
                <td><%= link_to "See More", song_path(song) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>