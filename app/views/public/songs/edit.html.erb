<div class="col-sm-12 relative">
  <%= render "layouts/sidebar" %>
  <div class="main-content">
    <%= render "layouts/jumbotron" %>
    <h2>Edit <%= @song.name %></h2>
    <%= form_with model: @song, local: true do |f| %>
      <div class="col-sm-4 col-sm-offset-1">
        <div class="form-group">
          <%= f.label :avatar, class: "control-label"%>
          <%= f.file_field :avatar %>
        </div>
      </div>
      <div class="col-sm-6">
        <div class="form-group">
          <%= f.label :name, class: "control-label" %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "control-label" %><br>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div clas-"form-group">
          <% f.label :tag_list, class: "control-label" %><br>
          <%= f.text_field :tag_list, class: "form-control" %>
        </div>
        <%= f.submit "UPDATE", class: "btn btn-default" %>
      </div>
      <% end %>
    </div>
  <%= link_to "Back", song_path(@song) %>
</div>