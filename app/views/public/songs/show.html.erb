<div class="col-sm-12 relative">
  <%= render "layouts/sidebar" %>
  <div class="main-content">
    <%= render "layouts/jumbotron" %>
    <div class="row">
      <div class="col-sm-4 col-sm-offset-1">
        <div class="song-image">
          IMAGEIMGAE
        </div>
      </div>
      <div class="col-sm-6">
        <div class="song-info">
          <table>
            <tr><th>NAME</th>
            <td>
              <%= @song.name %> 
              <% if @song.favorited_by?(current_user) %>
                <%= link_to "★",  song_favorite_path(@song) , method: :delete, style: "color: yellow;" %>
              <% else %>
                <%= link_to "★", song_favorite_path(@song), method: :post, style: "color:  blue;" %>
              <% end %>
            </td></tr>
            <tr><th>DESCRIPTION</th></tr>
            <tr><td><%= @song.description %></td></tr>
            <tr>
              <th>URL</th>
              <td>
                <% @song.addresses.each do |address| %>
                  <%= address.name %>&emsp;<%= address.url %>
                <% end %>
              </td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>