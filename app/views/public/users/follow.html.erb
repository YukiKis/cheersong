<div class="col-sm-12 relative">
  <%= render "layouts/sidebar" %>
  <div calss="main-content">
    <%= render "layouts/jumbotron" %>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1">
        <h2><%= @title %></h2>
        <table class="table table-hover">
          <thead class="row">
            <th class="col-sm-4">Name</th>
            <th class="col-sm-4">Songs</th>
            <th class="col-sm-4"></th>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= user.name %></td>
                <td><%#= counter("song", user.songs.count) %></td>
                <% if current_user.following?(user) %>
                  <td><%= link_to "Unfollow", user_unfollow_path(user), method: :delete %></td>
                <% else %>
                  <td><%= link_to "Follow", user_follow_path(user), method: :post %></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>