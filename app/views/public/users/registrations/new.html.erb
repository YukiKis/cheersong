<div class="col-sm-10 col-sm-offset-1 text-center">
  <h2 class="register-heading">新規登録</h2>
  <%= render "layouts/error", resource: @user %>
  <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
    <div class="form-group form-inline">
      <%= f.label :name, "名前", class: "control-label" %><br>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :email, "メールアドレス", class: "control-label" %><br>
      <%= f.email_field :email, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :password, "パスワード", class: "control-label" %><br>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :password_confirmation, "パスワード(確認用)", class: "control-label" %><br>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>
    <div class="btn">
      <%= f.submit "登録", class: "btn btn-default" %>
    </div>
  <% end %>
</div>