<div class="col-sm-10 col-sm-offset-1 text-center">
  <h2>ログイン</h2>
  <%= render "layouts/error", resource: @user %>
  <%= form_with model: @user, url: session_path(resource_name), local: true do |f| %>
    <div class="form-group form-inline">
      <%= f.label :name, "名前", class: "control-form" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group form-inline">
      <%= f.label :password, "パスワード", class: "control-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <div class="btn">
      <%= f.submit "ログイン", class: "btn btn-default" %>
    </div>
  <% end %>
</div>