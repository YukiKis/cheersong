<div class="col-sm-12 relative">
  <%= render "layouts/sidebar" %>
  <div class="main-content">
    <div class="row">
      <div class="col-sm-3 col-sm-offset-1" style="border: 10px solid orange;">
        
      </div>
      <div class="col-sm-7">
        <h2 class="text-center mb-30">Message with <%= @user.name %></h2>
        <div class="message-list">
          <% @room.messages.each do |message| %>
            <% if message.user == current_user %>
              <p class="text-left">
                <% if message.user.avatar.url != nil %>
                  <%= image_tag(message.user.avatar.url, style: "width: 20px; height: 20px;") %>
                <% end %>
                <%= message.user.name %>&emsp;
                  <span class="comment-left">
                    <%= message.content %>&emsp;<%= message.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                  </span>
              </p>
            <% else %>
              <p class="text-right">
                <span class="comment-right"><%= message.content %>&emsp;<%= message.created_at.strftime("%Y/%m/%d %H:%M:%S") %></span>&emsp;
                <%= message.user.name %>
                <% if message.user.avatar.url != nil %>
                  <%= image_tag(message.user.avatar.url, style: "width: 20px; height: 20px;") %>
                <% end %>
              </p>
            <% end %>
          <% end %>
        </div>
        <div class="message-form">
          <%= form_with model: @message, url: user_room_messages_path(@user, @room), local: true do |f| %>
            <div class="form-group">
              <%= f.label :content, "メッセージ", class: "control-label" %><br>
              <%= f.text_field :content, class: "form-control" %>
              <%= f.hidden_field :room_id, value: @room.id %>
            </div>
            <div class="text-right">
              <%= f.submit "POST", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="back-link text-left">
          <%= link_to "Back", user_path(@user) %>
        </div>
      </div>
    </div>
  </div>
</div>