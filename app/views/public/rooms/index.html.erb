<div class="col-sm-12 relative">
  <%= render "layouts/sidebar" %>
  <div class="main-content">
    <%= render "layouts/jumbotron" %>
    <div class="main-content">
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          <h2><%= current_user.name %>'s <%= "room".pluralize(current_user.rooms.count) %></h2>
          <table class="table table-hover">
            <thead class="row">
              <th class="col-sm-3">Name</th>
              <th class="col-sm-6">Last Message</th>
              <th class="col-sm-3"></th>
            </thead>
            <tbody>
              <% @rooms.each do |room| %>
                <% if room.messages.any? %>
                  <% 
                    other = room.users.select { |user| current_user != user }[0]
                  %>
                  <tr>
                    <td><%= other.name %></td>
                    <td>
                      <%= room.messages.last.content %> <%= room.messages.last.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
                    </td>
                    <td><%= link_to "Enter Room", user_room_path(other, room) %></td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>